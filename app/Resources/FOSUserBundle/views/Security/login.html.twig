{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{# Content #}
{% block fos_user_content %}

    <div class="row">
        <h3 class="w-100 text-center mt-4 mb-4">Login</h3>

        {# If we have any errors #}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {# Login form #}
        <form action="{{ path("fos_user_security_check") }}" method="post" class="mt-4 col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4 ml-auto mr-auto">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" class="form-control" name="_password" required="required" />
            </div>

            <div class="form-check">
                <label class="form-check-label" for="remember_me">
                    <input type="checkbox" id="remember_me" class="form-check-input" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>

            <button type="submit" id="_submit" class="btn btn-primary w-100 mt-2" name="_submit">{{ 'security.login.submit'|trans }}</button>
        </form>
    </div>
{% endblock %}