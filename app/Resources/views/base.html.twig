<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">

        {# Title #}
        <title>{% block title %}SMS System{% endblock %}</title>
        
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {# Stylesheets #}
        {% block stylesheets %}
        
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">

        {% endblock %}
    </head>
    <body>

        {# Body #}
        {% block body %}
            <header class="navbar navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="/">SMS</a>
                    <ul class="navbar-nav flex-row navbar-brand">
                        {% if app.user %}
                            <li class="nav-item">
                                {{ app.user.username }} |
                                <a href="{{ path('fos_user_security_logout') }}">
                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="text-white" href="{{ path('fos_user_security_login') }}">Login</a> |
                                <a class="text-white" href="{{ path('fos_user_registration_register') }}">Register</a>
                            </li>
                        {% endif %}

                    </ul>
                </div>
            </header>

            <div class="container">
                <div id="content" class="mt-2 mb-2">
                    {# Content #}
                    {% block content %}{% endblock %}
                </div>
            </div>
        {% endblock %}

        {# Javascripts #}
        {% block javascript %}
        
            <script src="{{ asset('build/js/app.js') }}"></script>

        {% endblock %}

    </body>
</html>
    